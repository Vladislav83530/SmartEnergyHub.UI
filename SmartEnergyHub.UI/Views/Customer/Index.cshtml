@using SmartEnergyHub.UI.Models.Customer

@model CustomerModel

@section Scripts {
    <script type="text/javascript" src="/js/profile.js" asp-append-version="true"></script>
}

@section Styles {
    <link href="/css/profile.css" rel="stylesheet" asp-append-version="true" />
}

<div class="container-profile container w-50 mt-5">
    <div class="row">
        <div class="col-8">
            <h2>@Model.FirstName @Model.LastName</h2>
            <div class="row">
                <div class="col-6 field-name-block">
                    <h4>Contact</h4>
                    <hr />
                    <p>
                        <img src="~/images/email.png" width="20" height="20" class="mb-1"/>
                        Email:
                    </p>
                    <p>
                        <img src="~/images/phone-call.png" width="20" height="20" class="mb-1" />
                        Phone number:
                    </p>
                    <h4>Location</h4>
                    <hr />
                    <p>
                        <img src="~/images/map.png" width="20" height="20" class="mb-1" />
                        Region:
                    </p>
                    <p>
                        <img src="~/images/buildings.png" width="20" height="20" class="mb-1" />
                        City:
                    </p>
                    <p>
                        <img src="~/images/streets.png" width="20" height="20" class="mb-1" />
                        Street:
                    </p>
                    <p>
                        <img src="~/images/home-icon-silhouette.png" width="20" height="20" class="mb-1" />
                        House number:
                    </p>
                    @if (!string.IsNullOrEmpty(Model.FlatNumber)) {
                        <p>
                            <img src="~/images/flat.png" width="20" height="20" class="mb-1" />
                            Flat number:
                        </p>
                    }
                </div>
                <div class="col-6 value-block">
                    <div class="contact-block">
                        <p>@Model.Email</p>
                        <p id="phoneNumber">@Model.PhoneNumber</p>
                    </div>
                    <hr class="value-block-line" />
                    <p>@Model.Region</p>
                    <p>@Model.City</p>
                    <p>@Model.Street</p>
                    <p>@Model.HouseNumber</p>
                    @if (!string.IsNullOrEmpty(Model.FlatNumber))
                    {
                        <p>@Model.FlatNumber</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-4 right-block">
            <div class="row img-block">
                <div class="col-7">
                <img class="profile-img" src="~/images/profile_photo.jpg" width="160" height="160" />
                </div>
                <div class="col-4 btn-block">
                    <div class="row mb-2">
                        <a class="btn w-100 btn-update" data-id="@Model.CustomerId">
                            <img src="~/images/updated.png" width="40" height="40" />
                            <span class="tooltip">Update info</span>
                        </a>
                    </div>
                    <div class="row">
                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@Model.CustomerId" class="btn w-100">
                            <img src="~/images/delete.png" width="40" height="40" />
                            <span class="tooltip">Delete account</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>